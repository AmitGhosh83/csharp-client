<Window x:Class="Homework4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label  HorizontalAlignment="Center" >ZipCode</Label>
            <TextBox Width="100" Height="50" x:Name="uxZipcode"
                     TextChanged="uxZipcode_TextChanged">
            </TextBox>
            <Button Width="80" Height="20" x:Name="uxButton" Margin="10 " Background="Green"
                    FontWeight="Heavy"
                    Content="Submit"></Button>
        </StackPanel>
    </Grid>
</Window>
